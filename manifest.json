{
  "manifest_version": 3,
  "name": "Word Replacer",
  "version": "1.0",
  "description": "Replace words on the current tab",
  "permissions": ["activeTab"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "content_scripts": [
    {
    "matches": ["http://*/*", "https://*/*"],
    "js": ["content.js"]
  }
]
}